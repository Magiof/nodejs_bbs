		<body>

<section class="hero is-primary">
	<div class="hero-body">
	  <p class="title">
		방명록
	  </p>
	</div>
  </section>


	<table class="table table-hover" style="height: 200px; width: 1500px; margin: auto;">
	  <thead class="table-light">
		<tr>
		  <td style="width: 10%">번호</td>
		  <td style="width: 60%">제목</td>
		  <td style="width: 15%">작성자</td>
		  <td style="width: 15%">작성일</td>
		</tr>
	  </thead>
	  <tbody id="article-box">
        <% for (let i=0; i<articles.length; i++) { %> 
            <tr>
            <td onclick="location.href = '/blog/detail/<%= articles[i].articleId %>'"> 
                <%= articles[i].articleId %>
            </td>
            <td onclick="location.href = '/blog/detail/<%= articles[i].articleId %>'"> 
                <%= articles[i].title %>
            </td>
            <td>
                <%= articles[i].authorName %>
            </td>
            <td>
                <%= articles[i].createdAt.toLocaleString() %>
            </td>
            </tr>
            <% } %>
	  </tbody>
	</table>
  </div>
  <div class="buttons" style="border: 1px solid transparent;
  padding: .375rem .75rem;
  font-size: 1rem;
  border-radius: .25rem; float: right; margin-right: 100px;">
    <button class="button is-primary" onclick="location.href = '/blog/write'">글 작성하기</button>
</div>
</body>
</html>


